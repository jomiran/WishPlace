<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="bottom"
            android:layout_marginTop="10px">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@color/lemon"
                android:focusable="true"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:paddingRight="150dp"
                    android:paddingTop="10dp"
                    android:text="EMAIL"
                    android:textColor="@color/orange"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/join_input_email"
                    android:layout_width="200dp"
                    android:layout_height="34dp"
                    android:background="@drawable/rounded_edittext"
                    android:inputType="textEmailAddress"
                    android:paddingLeft="5dip"
                    android:singleLine="true"
                    android:textSize="20dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:paddingRight="150dp"
                    android:paddingTop="10dp"
                    android:text="PHONE"
                    android:textColor="@color/orange"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/join_input_phone"
                    android:layout_width="200dp"
                    android:layout_height="34dp"
                    android:background="@drawable/rounded_edittext"
                    android:inputType="phone"
                    android:paddingLeft="5dip"
                    android:singleLine="true"
                    android:textSize="20dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:paddingRight="150dp"
                    android:paddingTop="10dp"
                    android:text="비밀번호"
                    android:textColor="@color/orange"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/join_input_password_1"
                    android:layout_width="200dp"
                    android:layout_height="34dp"
                    android:background="@drawable/rounded_edittext"
                    android:inputType="textPassword"
                    android:paddingLeft="5dip"
                    android:singleLine="true"
                    android:textSize="20dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:paddingRight="120dp"
                    android:paddingTop="10dp"
                    android:text="비밀번호 확인"
                    android:textColor="@color/orange"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/join_input_password_2"
                    android:layout_width="200dp"
                    android:layout_height="34dp"
                    android:background="@drawable/rounded_edittext"
                    android:inputType="textPassword"
                    android:paddingLeft="5dip"
                    android:singleLine="true"
                    android:textSize="20dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:paddingRight="150dp"
                    android:paddingTop="10dp"
                    android:text="성별"
                    android:textColor="@color/orange"
                    android:textStyle="bold" />

                <Spinner
                    android:id="@+id/join_select_sex"
                    android:layout_width="200dp"
                    android:layout_height="34dp"
                    android:background="@drawable/rounded_edittext"
                    android:paddingLeft="5dip"
                    android:prompt="@string/sex_prompt"
                    android:singleLine="true"
                    android:textSize="20dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:paddingRight="150dp"
                    android:paddingTop="10dp"
                    android:text="주소"
                    android:textColor="@color/orange"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/join_input_address"
                    android:layout_width="200dp"
                    android:layout_height="34dp"
                    android:background="@drawable/rounded_edittext"
                    android:paddingLeft="5dip"
                    android:singleLine="true"
                    android:textSize="20dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:paddingRight="150dp"
                    android:paddingTop="10dp"
                    android:text="출생년도"
                    android:textColor="@color/orange"
                    android:textStyle="bold" />

                <Spinner
                    android:id="@+id/join_select_birth_year"
                    android:layout_width="200dp"
                    android:layout_height="34dp"
                    android:background="@drawable/rounded_edittext"
                    android:paddingLeft="5dip"
                    android:prompt="@string/birth_year_prompt"
                    android:singleLine="true"
                    android:textSize="20dp" />

                <ScrollView
                    android:layout_width="fill_parent"
                    android:layout_height="210px"
                    android:layout_gravity="bottom"
                    android:layout_marginTop="10px">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1. 수집ㆍ이용에 관한 사항\n□ 수집ㆍ이용 목적\nWishPlace 회원서비스 제공\n창업자들에게 회원정보 제공\n□ 수집ㆍ이용할 항목개인식별정보\n- 필수사항 : 이메일, 비밀번호, 연락처\n□ 보유ㆍ이용기간 : 회원탈퇴 시 까지\n위 개인정보는 수집ㆍ이용에 관한 동의일로부터 보유목적 달성시 또는 정보주체가 개인정보 삭제를 요청할 경우 지체 없이 파기합니다.\n□ 동의를 거부할 권리 및 동의를 거부할 경우의 불이익\n위 개인정보의 수집ㆍ이용에 관한 동의는 회원가입 위해 필수적이므로 이에 동의하셔야 이후 절차를 진행할 수 있습니다.\n선택항목의 수집ㆍ이용에 관한 동의는 거부하실 수 있으며, 동의하지 않으시는 경우 관련서비스 이용(비상연락 등)에 제한이 있을 수 있습니다."
                        android:textColor="#000000" />
                </ScrollView>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="30dp"
                    android:gravity="center_horizontal"
                    android:paddingTop="10dp">

                    <com.gc.materialdesign.views.CheckBox
                        android:id="@+id/join_check_agree"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:gravity="center"
                        android:paddingRight="5dp"
                        android:text="약관동의"
                        android:textColor="@color/orange" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:gravity="center_horizontal"
                    android:paddingTop="10dp">

                    <com.gc.materialdesign.views.ButtonFlat
                        android:id="@+id/join_btn_ok"
                        android:layout_width="100dp"
                        android:layout_height="40dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="3dp"
                        android:text="가입"
                        android:background="@color/blue"/>

                    <com.gc.materialdesign.views.ButtonFlat
                        android:id="@+id/join_btn_cancle"
                        android:layout_width="100dp"
                        android:layout_height="40dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="3dp"
                        android:text="취소"
                        android:background="@color/blue"/>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</LinearLayout>